---
- name: create directory
  file:
    path: /opt/guacamole
    state: directory
    mode: '0755'
    owner: '{{ansible_user}}'
  become: true

- name: Download client
  include_tasks: "{{server_version}}/download"

- name: Restart Tomcat
  systemd:
    state: restarted
    name: "tomcat{{ tomcast_version }}"
  become: true
