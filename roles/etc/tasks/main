---
- name: Create /etc/guacamole directory
  file:
    path: /etc/guacamole
    state: directory
    mode: '0755'

- name: Test user-mapping.xml
  copy:
    src: test.user-mapping.xml
    dest: /etc/guacamole/user-mapping.xml
    owner: root
    group: root
    mode: '0644'
  become: true
  notify: restart Tomcat
